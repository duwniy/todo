<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.todo.HelloController">
    <top>
        <VBox spacing="10" style="-fx-padding: 15; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
            <Label style="-fx-font-size: 28; -fx-font-weight: bold;" text="Advanced Todo List" />
            <Label fx:id="taskCountLabel" style="-fx-font-size: 12; -fx-text-fill: #666666;" text="Tasks: 0 | Completed: 0" />
        </VBox>
    </top>

    <center>
        <HBox spacing="15" style="-fx-padding: 15;">
            <!-- Left Panel: Task List -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Task List" />

                <!-- Search and Filter -->
                <HBox spacing="10">
                    <TextField fx:id="searchField" promptText="Search tasks..." HBox.hgrow="ALWAYS" />
                    <ComboBox fx:id="filterCombo" prefWidth="120" />
                </HBox>

                <!-- Task ListView -->
                <ListView fx:id="taskListView" VBox.vgrow="ALWAYS" style="-fx-font-size: 11;" />
            </VBox>

            <!-- Right Panel: Task Details -->
            <VBox spacing="10" prefWidth="350" style="-fx-border-color: #cccccc; -fx-border-width: 1 0 0 1; -fx-padding: 15;">
                <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Task Details" />

                <!-- Title -->
                <VBox spacing="5">
                    <Label text="Title:" style="-fx-font-size: 11; -fx-font-weight: bold;" />
                    <TextField fx:id="titleField" promptText="Enter task title..." />
                </VBox>

                <!-- Description -->
                <VBox spacing="5" VBox.vgrow="ALWAYS">
                    <Label text="Description:" style="-fx-font-size: 11; -fx-font-weight: bold;" />
                    <TextArea fx:id="descriptionArea" promptText="Enter task description..." wrapText="true" VBox.vgrow="ALWAYS" />
                </VBox>

                <!-- Category -->
                <VBox spacing="5">
                    <Label text="Category:" style="-fx-font-size: 11; -fx-font-weight: bold;" />
                    <ComboBox fx:id="categoryCombo" prefWidth="Infinity" />
                </VBox>

                <!-- Priority -->
                <VBox spacing="5">
                    <Label text="Priority:" style="-fx-font-size: 11; -fx-font-weight: bold;" />
                    <ComboBox fx:id="priorityCombo" prefWidth="Infinity" />
                </VBox>

                <!-- Completed -->
                <CheckBox fx:id="completedCheckBox" text="Mark as completed" />

                <!-- Buttons -->
                <HBox spacing="10">
                    <Button onAction="#onAddTaskClick" prefWidth="100" text="Add Task" style="-fx-font-size: 11;" />
                    <Button onAction="#onUpdateTaskClick" prefWidth="100" text="Update" style="-fx-font-size: 11;" />
                    <Button onAction="#onDeleteTaskClick" prefWidth="100" text="Delete" style="-fx-font-size: 11;" />
                </HBox>

                <Separator />

                <HBox spacing="10">
                    <Button onAction="#onSaveClick" prefWidth="100" text="Save All" style="-fx-font-size: 11;" />
                    <Button onAction="#onClearAllClick" prefWidth="100" text="Clear All" style="-fx-font-size: 11;" />
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>