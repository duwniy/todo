<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 50; -fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.todo.controller.LoginController">

    <!-- Title -->
    <Label style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Todo List App" />
    <Label style="-fx-font-size: 14; -fx-text-fill: #666666;" text="Manage your tasks efficiently" />

    <!-- Login Form Container -->
    <VBox prefWidth="350" spacing="15" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 30; -fx-background-color: white; -fx-border-radius: 5;">

        <!-- Username -->
        <VBox spacing="5">
            <Label style="-fx-font-size: 12; -fx-font-weight: bold;" text="Username:" />
            <TextField fx:id="usernameField" promptText="Enter your username..." style="-fx-font-size: 12; -fx-padding: 10;" />
        </VBox>

        <!-- Password -->
        <VBox spacing="5">
            <Label style="-fx-font-size: 12; -fx-font-weight: bold;" text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Enter your password..." style="-fx-font-size: 12; -fx-padding: 10;" />
        </VBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel" style="-fx-font-size: 12; -fx-text-fill: #ff0000;" text="" wrapText="true" />

        <!-- Buttons -->
        <HBox spacing="10">
            <Button fx:id="loginButton" onAction="#onLoginClick" prefWidth="160.0" style="-fx-font-size: 12; -fx-padding: 10;" text="Sign In" />
            <Button fx:id="registerButton" onAction="#onRegisterClick" prefWidth="160" style="-fx-font-size: 12; -fx-padding: 10;" text="Register" visible="false" />
        </HBox>

        <!-- Switch Link -->
        <Hyperlink fx:id="switchToRegisterLink" onAction="#onSwitchToRegister" prefHeight="23.0" prefWidth="163.0" style="-fx-font-size: 12; -fx-text-decoration: underline;" text="No account? Register here" />
    </VBox>
</VBox>
